<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NoSmokeApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rausch</item>
        <item name="colorPrimaryVariant">@color/rausch100</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/foggy</item>
        <item name="colorSecondaryVariant">@color/hof</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.AppSplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/rausch</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_smoke</item>
        <item name="postSplashScreenTheme">@style/Theme.NoSmokeApp</item>
    </style>
</resources>